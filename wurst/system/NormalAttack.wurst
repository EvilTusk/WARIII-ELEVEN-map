package NormalAttack
import DamageDetection
import UnitBase
import DamageSystem

function onAttacked()
    let u = GetTriggerUnit()
    let s = GetEventDamageSource()
    let ub = u.getUnitBase()
    let sb = s.getUnitBase()
    if (sb.cIsMelee)
        adDamageToObj(sb, ub, 1.)

init
    enableDamageDetect()
    addOnDamageFunc(function onAttacked)